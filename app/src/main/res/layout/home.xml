<LinearLayout android:id="@+id/main_LL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:weightSum="3"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:id="@+id/top_card_LL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/mentee_card"
                    android:layout_width="140dp"
                    android:layout_height="110dp"
                    android:onClick="query"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/m_dash_bg2"
                        android:gravity="center"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Mentees"
                            android:textColor="#fff"
                            android:textSize="22sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/issue_report_card"
                    android:layout_width="140dp"
                    android:layout_height="110dp"
                   android:layout_marginLeft="12dp"
                    android:layout_toEndOf="@id/mentee_card"
                    android:onClick="data"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/m_dash_bg1"
                        android:gravity="center"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:text="Issued Report"
                            android:textColor="#fff"
                            android:textSize="22sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/medium_card_LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:weightSum="2">

                    <android.support.v7.widget.CardView
                        android:id="@+id/weekly_report_card"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:onClick="report"
                        app:cardCornerRadius="7dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/m_dash_bg4"
                            android:gravity="center"
                            android:padding="18dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:text="Weekly Report"
                                android:textColor="#fff"
                                android:textSize="22sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/profile_card"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="report"
                        app:cardCornerRadius="7dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/m_dash_bg4"
                            android:gravity="center"
                            android:padding="18dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:text="Profile"
                                android:textColor="#fff"
                                android:textSize="22sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_card_LL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/message_card"
                    android:layout_width="140dp"
                    android:layout_height="110dp"
                    android:onClick="query"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/m_dash_bg2"
                        android:gravity="center"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Message"
                            android:textColor="#ffffff"
                            android:textSize="22sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/concern_card"
                    android:layout_width="140dp"
                    android:layout_height="110dp"
                   android:layout_marginLeft="12dp"
                    android:onClick="data"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/m_dash_bg1"
                        android:gravity="center"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:text="Concern"
                            android:textColor="#fff"
                            android:textSize="22sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
</LinearLayout>